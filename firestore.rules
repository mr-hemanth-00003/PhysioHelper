rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to articles for the main website
    // Allow write access for the admin panel to function
    // For a production app, you should restrict write access to authenticated admins
    match /articles/{articleId} {
      allow read, write: if true;
    }
    
    // Allow public read access to settings
    match /settings/{document} {
      allow read: if true;
      allow write: if true; // In production, restrict this to authenticated admins
    }
    
    // Allow public read access to team members
    match /team/{document} {
      allow read: if true;
      allow write: if true; // In production, restrict this to authenticated admins
    }
    
    // Allow public read access to case studies
    match /case-studies/{document} {
      allow read: if true;
      allow write: if true; // In production, restrict this to authenticated admins
    }
    
    // Allow public read access to study guides
    match /study-guides/{document} {
      allow read: if true;
      allow write: if true; // In production, restrict this to authenticated admins
    }
  }
}
